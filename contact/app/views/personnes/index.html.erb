

<h1>Personnes</h1>

<table class="table table-striped table-bordered ">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Email</th>
      <th>Portable</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personnes.each do |personne| %>
      <tr>
        <td><%= personne.nom %></td>
        <td><%= personne.prenom %></td>
        <td><%= personne.eamil %></td>
        <td><%= personne.portable %></td>
        <td><%= tag.content%></td>
        <td><%= link_to 'Afficher', personne, class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Modifier', edit_personne_path(personne), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Supprimer', personne, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau', new_personne_path, class:"btn btn-secondary" %>
<br>
<div>
  <%= link_to "Previous", personnes_path(page: @page - 1)%>
  
  <%= link_to "Next", personnes_path(page: @page +1)%>
</div>